{
  "name": "sketch-measure-pro",
  "description": "ðŸŽ¨ A modern, fun design measurement & annotation tool for Sketch - Built for the future!",
  "version": "1.0.0",
  "engines": {
    "sketch": ">=80.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/sketch-measure-pro.git"
  },
  "keywords": ["sketch", "plugin", "measurement", "annotation", "specs", "design", "developer"],
  "skpm": {
    "name": "Sketch Measure Pro",
    "manifest": "src/manifest.json",
    "main": "sketch-measure-pro.sketchplugin",
    "identifier": "com.sketchmeasurepro.plugin",
    "assets": [
      "resources/**/*"
    ]
  },
  "scripts": {
    "build": "npm run clean && skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "clean": "rm -rf *.sketchplugin",
    "dev": "npm run clean && npm run start",
    "test": "echo \"âš¡ Tests coming soon!\" && exit 0",
    "postinstall": "npm run build && skpm-link",
    "format": "prettier --write 'src/**/*.{js,ts,json}'",
    "lint": "eslint 'src/**/*.{js,ts}' --fix"
  },
  "devDependencies": {
    "@skpm/builder": "^0.8.0",
    "@types/sketch": "^1.0.0",
    "@types/node": "^20.0.0",
    "skpm": "^2.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "prettier": "^3.0.0",
    "webpack": "^5.88.0",
    "ts-loader": "^9.4.0"
  },
  "dependencies": {
    "@skpm/path": "^0.1.4",
    "chroma-js": "^2.4.2",
    "uuid": "^9.0.0"
  },
  "author": {
    "name": "Sketch Measure Pro Team",
    "email": "hello@sketchmeasurepro.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/your-username/sketch-measure-pro#readme",
  "bugs": {
    "url": "https://github.com/your-username/sketch-measure-pro/issues"
  }
}
